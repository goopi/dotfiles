set nocompatible

" setup vundle
filetype off
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" vundles
Bundle 'gmarik/vundle'
Bundle 'kien/ctrlp.vim'
Bundle 'goldfeld/vim-seek'
Bundle 'Lokaltog/vim-easymotion'
Bundle 'Raimondi/delimitMate'
Bundle 'terryma/vim-multiple-cursors'
Bundle 'tpope/vim-commentary'
Bundle 'tpope/vim-fugitive'
Bundle 'tpope/vim-repeat'
Bundle 'tpope/vim-surround'
Bundle 'derekwyatt/vim-scala'
Bundle 'fsouza/go.vim'
Bundle 'pangloss/vim-javascript'
Bundle 'rust-lang/rust.vim'
Bundle 'tpope/vim-markdown'
Bundle 'vim-ruby/vim-ruby'
Bundle 'mitsuhiko/vim-python-combined'

" enable filetype plugins and indentation
filetype plugin indent on

" backups and swap files
set directory=~/.tmp/

" utf-8 default encoding
set enc=utf-8
" prefer unix over windows over os9 formats
set fileformats=unix,dos,mac

" automatically reload changes if detected
set autoread

" writes on make/shell commands
set autowrite

" change buffer - without saving
set hidden

" fast terminal
set ttyfast

" use the system clipboard
if $TMUX == ''
  set clipboard+=unnamed
endif

" don't go to the start of the line after some commands
set nostartofline

" pasting large amounts of text
noremap <F1> <ESC>
set pastetoggle=<F1>

" highlight all search matches
set hlsearch
" case insensitive search
set ignorecase
" pay attention to case when caps are used
set smartcase
" show matches while typing
set incsearch
" assume /g flag on :s searches
set gdefault

" turn on syntax highlighting
syntax on

" disable folding
set nofoldenable
" show matching brackets
set showmatch
" highlight current line off
set nocursorline
" show invisible characters off
set nolist
" strings in 'list' mode
set listchars=tab:>>,trail:~,extends:#,nbsp:.,eol:$
" line numbers off
set nonumber

" hide mouse after chars typed
set mousehide
" mouse in all modes
set mouse=a

" no blinking
set novisualbell
" no noise
set noerrorbells
" disable any beeps or flashes on error
set vb t_vb=

" set the title of the window in the terminal to the file
set title
set titlestring=%F

" show (partial) command
set showcmd

" always show the statusline
set laststatus=2
set statusline=[%l:%v\ %P] " [line,col %]
set statusline+=\ %f " file
set statusline+=%m\ " modified flag
set statusline+=%{PasteStatusLineFlag()}
set statusline+=%{FugitiveHead()} " git current branch
set statusline+=%= " split point
set statusline+=%5y " file type
set statusline+=\ %{&ff}\ \/ " file format
set statusline+=\ %{''.(&fenc!=''?&fenc:&enc).''}\ " encoding

fun! FugitiveHead()
  if exists('*fugitive#head') && fugitive#head() != ''
    return '('.fugitive#head().')'
  endif
  return ''
endfunction

fun! PasteStatusLineFlag()
  if &paste
    return '[PASTE] '
  endif
  return ''
endfunction

" indentation
set autoindent
set cindent
" do not break indent on #
set indentkeys-=0#
set cinkeys-=0#
set cinoptions=:s,ps,ts,cs
set cinwords=if,else,while,do,for,switch,case
" tabs are 2 spaces
set tabstop=2
set softtabstop=2
" number of spaces used when indenting
set shiftwidth=2
" always insert spaces instead of Tab
set expandtab
set smarttab
" line wrapping off
set nowrap
" don't wrap lines by default
set textwidth=0

" backspace over anything
set backspace=indent,eol,start
" delete everything with backspace
set backspace=2

" autocompletion
set completeopt-=preview
" popup menu
inoremap <expr> <ESC> pumvisible() ? "\<C-e>" : "\<ESC>"
inoremap <expr> <CR> pumvisible() ? "\<C-y>" : "\<CR>"
inoremap <expr> <Down> pumvisible() ? "\<C-n>" : "\<Down>"
inoremap <expr> <Up> pumvisible() ? "\<C-p>" : "\<Up>"
imap <ESC>oA <ESC>ki
imap <ESC>oB <ESC>ji
imap <ESC>oC <ESC>li
imap <ESC>oD <ESC>hi

" enable command-line tab completion
set wildmenu
set wildmode=list:full
" exclude from search
set wildignore+=*.swp,*/.git/*
set wildignore+=*.jpg,*.jpeg,*.png,*.gif
set wildignore+=*.pyc,*.class,*.o,*/node_modules/*

" the term has 256 colors
set t_Co=256
" set background=dark
if has('gui_running')
  set guioptions=haMR
  set cursorline
  if has('gui_macvim')
    set guifont=Menlo:h14
  endif
else
  colorscheme default
endif

" set up easymotion colors
hi link EasyMotionTarget ErrorMsg
hi link EasyMotionShade Comment

" sets leader to ',' and localleader to '\'
let mapleader = ','
let maplocalleader='\\'

" map . in visual mode
vnoremap . :norm.<CR>

" clear search
nmap <silent> <C-h> :silent noh<CR>

" split management
nnoremap <leader>sv <C-w>v<C-w>l
nnoremap <leader>s :new<CR>

" highlight 80+ cols
map <leader>8 /\%>80v.\+<CR>

" strip trailing whitespace
map <C-c> :%s/\s\+$//<CR>

" toggle invisible chars
map <leader>i :set list!<CR>

" quit window on <leader>q
nnoremap <leader>q :q<CR>

" split edit vimrc
map <leader>v :vsp ~/.vimrc<CR>
" reload vimrc
map <leader>rs :source ~/.vimrc<CR>

" toggle spell check with <F5>
map <F5> :setlocal spell! spelllang=en<CR>
imap <F5> <ESC>:setlocal spell! spelllang=en<CR>

" easymotion
let g:EasyMotion_leader_key = '<leader><leader>'

" seek
let g:SeekKey = '<Space>'
let g:SeekBackKey = '<U-Space>'

" ctrlp
if executable('ag')
  " use ag in ctrlp for listing files
  let g:ctrlp_user_command = 'ag %s --files-with-matches -g "" --ignore "\.git$\|\.hg$\|\.svn$"'
  let g:ctrlp_use_caching = 0
else
  let g:ctrlp_custom_ignore = '\.git$\|\.hg$\|\.svn$'
  let g:ctrlp_user_command = ['.git', 'cd %s && git ls-files . --cached --exclude-standard --others']
endif

let g:ctrlp_map = '<C-p>'
let g:ctrlp_match_window = 'bottom,order:top,min:1,max:10'
let g:ctrlp_match_window_reversed = 0
let g:ctrlp_max_height = 10
let g:ctrlp_working_path_mode = 'ra'
nmap <C-b> :CtrlPBuffer<CR>
nmap <D-r> :CtrlPBufTag<CR>

" vundle
nmap <leader>bi :BundleInstall<CR>
nmap <leader>bi! :BundleInstall!<CR>
nmap <leader>bc :BundleClean<CR>

" easy switching
nnoremap <leader>th :set ft=html<CR>
nnoremap <leader>tp :set ft=python<CR>

" do syntax highlight syncing from start
autocmd BufEnter * :syntax sync fromstart

autocmd BufNewFile,BufRead *.go setlocal ft=go
autocmd FileType go setlocal noexpandtab shiftwidth=6 tabstop=6 softtabstop=6
autocmd FileType python setlocal expandtab shiftwidth=4 tabstop=8 softtabstop=4
autocmd BufNewFile,BufRead *.json setlocal ft=javascript
autocmd FileType javascript setlocal commentstring=//\ %s
autocmd FileType css setlocal commentstring=/*\ %s\ */
autocmd FileType xml,html setlocal expandtab shiftwidth=2 tabstop=2 softtabstop=2
autocmd FileType html setlocal commentstring=<!--\ %s\ -->
